<div class="container">

  <div class="row justify-content-between my-2">
    <div class="col-auto">
      <h1>Your Cards</h1>
    </div>
    <div class="col-auto">
      <%= link_to "Add New Card", new_cards_path, class: "btn btn-success" %>
    </div>
  </div>

  <% unless @cards.exists? %>
    <h3>You don't have any cards</h3>
  <% else %>

    <div class="row g-3 row-cols-auto">
      <% @cards.each do |card| %>
        <%= render 'card', card: card %>
      <% end %>
    </div>

  <% end %>
</div>
