<div class="col">
  <div class="card text-bg-light" style="width: 18rem;">

    <div class="card-body my-3">
      <div class="row">

        <div class="col">
          <h5 class="card-title"><%= card.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= card.card_type %></h6>
        </div>

        <div class="col-5 m-auto">
          <%= button_to "Delete", cards_path,
                        params: { id: card.id },
                        method: :delete,
                        class: "btn btn-danger" %>
        </div>

      </div>
    </div>

  </div>
</div>

