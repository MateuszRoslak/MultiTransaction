<%= stylesheet_link_tag "devise/forms", "data-turbo-track": "reload" %>

<h2 class="form-class mx-auto">Forgot your password?</h2>

<div class="card form-class mx-auto">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
      </div><br/>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-outline-secondary text-dark" %>
      </div>
    <% end %>
  </div>
</div>
