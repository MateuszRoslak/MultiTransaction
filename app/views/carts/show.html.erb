<div class="container">
  <div class="card my-3">

    <div class="card-header">Your Cart</div>

    <div class="card-body">
      <% unless @line_items.exists? %>
        <h3>Your shopping cart is empty!</h3>
      <% else %>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h3>Total value: <%= format_price(@line_items.first.product.currency,  get_final_price(@line_items)) %></h3>
            <h4>Total items: <%= @line_items.total_items %></h4>
          </div>
          <%= button_to "Go to checkout", checkout_path, data: { turbo: false }, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <% @line_items.each do |line_item| %>
    <%= render 'line_item', line_item: line_item %>
  <% end %>
</div>
