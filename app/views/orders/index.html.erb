<div class="container">
  <table class="table align-middle my-5">
    <thead>
    <tr>
      <th scope="col">Order Number</th>
      <th scope="col">Order Date</th>
      <th scope="col">Quantity</th>
      <th scope="col">Cost</th>
      <th scope="col"/>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= format_timestamp_to_db(order.created_at) %></td>
        <td><%= order.item_quantity %></td>
        <td><%= format_price(order.currency, order.items_total) %></td>
        <td><%= link_to "Show", order_path(order.number), class: "btn btn-sm btn-outline-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>