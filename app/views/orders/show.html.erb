<div class="container">
  <div class="card my-3">

    <div class="card-header">Order number: <%= @order.number %></div>

    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <dl class="row">
          <dt class="col-sm-2">Date of order:</dt>
          <dd class="col-sm-9"><%= format_timestamp_to_db(@order.created_at) %></dd>

          <dt class="col-sm-2">Total items:</dt>
          <dd class="col-sm-9"><%= @order.item_quantity %></dd>

          <dt class="col-sm-2">Discount granted:</dt>
          <dd class="col-sm-9 text-danger"><%= format_price(@order.currency, @order.discount_total) %></dd>

          <dt class="col-sm-2">Total net:</dt>
          <dd class="col"><%= format_price(@order.currency, @order.items_total_net) %></dd>

          <dt class="col-sm-2">Total tax:</dt>
          <dd class="col"><%= format_price(@order.currency, @order.tax_total) %></dd>

          <dt class="col-sm-2">Total value:</dt>
          <dd class="col"><%= format_price(@order.currency, @order.items_total) %></dd>
        </dl>
      </div>
    </div>
  </div>

  <% @order.order_items.each do |order_item| %>
    <%= render 'order_item', order_item: order_item %>
  <% end %>

</div>